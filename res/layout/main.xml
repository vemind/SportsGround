<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView  android:id="@+id/text_status"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/hello"
    />
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<EditText android:id="@+id/dips_edit"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="left"
    		android:singleLine="true"
    		android:inputType="numberDecimal"
    		android:hint="@string/dips_desc"
    		/>
    	<Button android:id="@+id/dips_button"
    		android:layout_width="wrap_content"
    		android:layout_height="fill_parent"
    		android:gravity="right"
    		android:text="@string/add"
    		android:onClick="addDips"/>
    	</LinearLayout>
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<EditText android:id="@+id/pulls_edit"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="left"
    		android:singleLine="true"
    		android:inputType="numberDecimal"
    		android:hint="@string/pulls_desc"
    		/>
    	<Button android:id="@+id/pulls_button"
    		android:layout_width="wrap_content"
    		android:layout_height="fill_parent"
    		android:gravity="right"
    		android:text="@string/add"
    		android:onClick="addPulls"/>
    	</LinearLayout>
</LinearLayout>
