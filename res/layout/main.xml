<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView  android:id="@+id/name_text"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:textSize="32sp"
	    android:textColor="#DDDDDD"
	    />
    <TextView  android:id="@+id/dips_text"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:textSize="32sp"
	    />
    <TextView  android:id="@+id/pulls_text"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:textSize="32sp"
	    android:textColor="#DDDDDD"
	    />
    <TextView  android:id="@+id/overall_text"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:textSize="32sp"
	    />
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<EditText android:id="@+id/dips_edit"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="left"
    		android:singleLine="true"
    		android:inputType="numberDecimal"
    		android:hint="@string/dips_desc"
    		android:textSize="24sp"
    		/>
    	<Button android:id="@+id/dips_button"
    		android:layout_width="wrap_content"
    		android:layout_height="fill_parent"
    		android:gravity="right"
    		android:text="@string/add"
    		android:textSize="24sp"
    		android:onClick="addDips"/>
    	</LinearLayout>
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<EditText android:id="@+id/pulls_edit"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:gravity="left"
    		android:singleLine="true"
    		android:inputType="numberDecimal"
    		android:hint="@string/pulls_desc"
    		android:textSize="24sp"
    		/>
    	<Button android:id="@+id/pulls_button"
    		android:layout_width="wrap_content"
    		android:layout_height="fill_parent"
    		android:gravity="right"
    		android:text="@string/add"
    		android:onClick="addPulls"
    		android:textSize="24sp"
    		/>
    	</LinearLayout>
</LinearLayout>
